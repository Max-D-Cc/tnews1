<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_red_package_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/rp_share_bg"
    tools:context="com.dophin.weichat_article.mine.activity.RedPackageShareActivity">

    <com.dophin.weichat_article.widget.CircleImageView
        android:id="@+id/rps_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:border_color="@color/white"
        app:border_width="1.5dp"
        android:src="@mipmap/denglutouxiang"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_below="@+id/rps_img"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="我抢了0.9元红包"
        />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="长按扫二维码一起抢"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="100dp"
        android:background="@mipmap/test"
        android:layout_height="100dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />
</RelativeLayout>
