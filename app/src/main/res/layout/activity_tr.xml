<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tr"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <include layout="@layout/include_titlebar"/>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tr_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        tl:tl_tab_padding="7dp"
        tl:tl_tab_space_equal="true"
        tl:tl_indicator_color="@color/appcolor"
        app:tl_textSelectColor="@color/appcolor"
        app:tl_textUnselectColor="@color/textblack"
        tl:tl_indicator_style="NORMAL"
        android:layout_alignParentLeft="true"
        app:tl_indicator_width="75dp"
        android:layout_alignParentStart="true" />
    
    <LinearLayout
        android:id="@+id/tab_ll"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="排名"
            android:gravity="center"
            android:textColor="@color/textblack"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="头像"
            android:gravity="center"
            android:textColor="@color/textblack"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.325"
            android:text="昵称"
            android:gravity="center"
            android:textColor="@color/textblack"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.325"
            android:text="数量"
            android:gravity="center"
            android:textColor="@color/textblack"
            />

    </LinearLayout>
        

    <android.support.v4.view.ViewPager
        android:layout_marginTop="1dp"
        android:id="@+id/tr_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
