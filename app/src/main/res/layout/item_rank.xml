<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
        
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            >
            <ImageView
                android:id="@+id/item_rank_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

            <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:id="@+id/item_rank_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textgray"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            >

            <com.dophin.weichat_article.widget.CircleImageView
                android:id="@+id/item_rank_photo"
                android:layout_width="35dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:layout_height="35dp"
                android:src="@mipmap/test"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/item_rank_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.325"
            android:textColor="@color/textblack"
            android:gravity="center"
            android:text="测试名字"
            />

        <TextView
            android:id="@+id/item_rank_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.325"
            android:textColor="@color/textblack"
            android:gravity="center"
            android:text="10000"
            />

    </LinearLayout>
    
</RelativeLayout>