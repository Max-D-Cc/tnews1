<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_user_info"
    android:layout_width="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.dophin.weichat_article.mine.activity.UpdateUserInfoActivity">

    <include layout="@layout/include_titlebar"/>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/uui_account"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:hint="请输入账号"
            android:textColorHint="#44000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/uui_getcode"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:background="@drawable/round_red"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:gravity="center"
            android:text="验证码"
            android:layout_alignParentRight="true"
            android:layout_height="25dp" />

    </RelativeLayout>



    <EditText
        android:id="@+id/uui_code"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:visibility="gone"
        android:hint="请输入验证码"

        android:textColorHint="#44000000"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/uui_sureAccout"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:hint="输入新绑定的账号"
        android:visibility="gone"
        android:textColorHint="#44000000"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/uii_attention"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="注：支付宝姓名应和支付宝账号应一致"
        android:textColor="@color/textblack"
        />


</LinearLayout>
