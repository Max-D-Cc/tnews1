<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regist"
    android:layout_width="match_parent"
    android:background="@color/app_bg"
    android:layout_height="match_parent"
    tools:context="com.dophin.weichat_article.login.RegistActivity">\

    <include layout="@layout/include_titlebar"/>
    
    <View
        android:id="@+id/reg_v1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="68dp"
        android:background="#33000000"
        />
    <EditText
        android:hint="请输入手机号"
        android:textColorHint="#44000000"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/reg_v1"
        android:id="@+id/reg_phone"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:background="@color/white"
        android:layout_height="45dp"
        />
    <View
        android:layout_marginLeft="15dp"
        android:id="@+id/reg_v2"
        android:layout_below="@+id/reg_phone"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#33000000"
        />

    <EditText
        android:hint="请输入验证码"
        android:textColorHint="#44000000"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/reg_v2"
        android:id="@+id/reg_code"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp"
        />
    <View
        android:layout_marginLeft="15dp"
        android:id="@+id/reg_v3"
        android:layout_below="@+id/reg_code"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#33000000"
        />
    <EditText
        android:hint="请设置密码（6-16位）"
        android:textColorHint="#44000000"
        android:textSize="14sp"
        android:singleLine="true"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:layout_below="@+id/reg_v3"
        android:id="@+id/reg_pwd"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp"
        />
    <View
        android:layout_marginLeft="15dp"
        android:id="@+id/reg_v4"
        android:layout_below="@+id/reg_pwd"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#33000000"
        />
    <EditText
        android:hint="请再次输入密码"
        android:textColorHint="#44000000"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_below="@+id/reg_v4"
        android:id="@+id/reg_suerpwd"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp"
        />

    <View
        android:layout_marginLeft="15dp"
        android:id="@+id/reg_v6"
        android:layout_below="@+id/reg_suerpwd"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#33000000"
        />
    <EditText
        android:hint="填写邀请码（选填）"
        android:textColorHint="#44000000"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:layout_below="@+id/reg_v6"
        android:id="@+id/reg_yqm"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp"
        />

    <View
        android:id="@+id/reg_v5"
        android:layout_below="@+id/reg_yqm"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#33000000"
        />

    <TextView
        android:id="@+id/reg_reg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/reg_yqm"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="注册"
        android:textSize="16sp"
        android:background="@drawable/round_login_red"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/reg_getCode"
        android:layout_width="50dp"
        android:layout_marginTop="78dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="验证码"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:background="@drawable/round_red"
        android:layout_height="25dp" />
</RelativeLayout>
