<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/round_white"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/appcolor"
        android:gravity="center"
        android:text="确认押注"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textblack"
            android:layout_width="80dp"
            android:text="正方："
            android:textSize="13sp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/diglog_z_jian"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/guess_jian"
            android:paddingRight="8dp"
            />

        <EditText
            android:id="@+id/diglog_z_num"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textSize="13sp"
            android:inputType="number"
            android:hint="0"
            android:singleLine="true"
            android:textColor="@color/textblack"
            android:maxLength="4"
            android:background="@drawable/round_line_gray"
            />

        <ImageView
            android:id="@+id/diglog_z_add"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/guess_jiaon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/textblack"
            android:text="注"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="right"
            android:textColor="@color/textblack"
            android:layout_width="80dp"
            android:text="反方："
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/diglog_f_jian"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/guess_jian"
            android:paddingRight="8dp"
            />

        <EditText
            android:id="@+id/diglog_f_num"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textSize="13sp"
            android:hint="0"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="4"
            android:textColor="@color/textblack"
            android:background="@drawable/round_line_gray"
            />

        <ImageView
            android:id="@+id/diglog_f_add"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/guess_jiaon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/textblack"
            android:text="注"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_g_tv1"
            android:gravity="right"
            android:textColor="@color/textblack"
            android:layout_width="80dp"
            android:text="合计："
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_g_sum"
            android:textColor="@color/textblack"
            android:layout_width="70dp"
            android:layout_marginLeft="72dp"
            android:text="10 注"
            android:gravity="right"
            android:layout_toRightOf="@+id/dialog_g_tv1"
            android:textSize="13sp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_g_tv12"
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textblack"
            android:layout_width="80dp"
            android:text="需要金钱："
            android:textSize="13sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_g_nmoney"
            android:textColor="@color/textblack"
            android:layout_width="70dp"
            android:layout_marginLeft="72dp"
            android:text="10 元"
            android:gravity="right"
            android:layout_toRightOf="@+id/dialog_g_tv12"
            android:textSize="13sp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/dialog_g_tv3"
            android:gravity="right"
            android:textColor="@color/textblack"
            android:layout_width="80dp"
            android:text="我的金钱："
            android:textSize="13sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_g_allmoney"
            android:textColor="@color/textblack"
            android:layout_width="70dp"
            android:layout_marginLeft="72dp"
            android:gravity="right"
            android:text="100000 元"

            android:layout_toRightOf="@+id/dialog_g_tv3"
            android:textSize="13sp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/dialog_g_submit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/round_red"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:text="果断押注"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        />

</LinearLayout>
