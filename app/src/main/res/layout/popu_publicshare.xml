<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eaeff3"
    android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_bg" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择要分享的平台"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/textblack" />

        <LinearLayout
            android:id="@+id/card_p_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/card_p_circle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/card_cicle"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/textblack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_p_wx1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/card_wx"
                android:gravity="center"
                android:text="微信朋友"
                android:textColor="@color/textblack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_p_qq1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/card_qq"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/textblack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_p_qqzone1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/card_qqzone"
                android:gravity="center"
                android:text="QQ空间"
                android:textColor="@color/textblack"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_bg" />

        <TextView
            android:id="@+id/card_p_cancel1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textblack"
            android:textSize="16sp" />

</LinearLayout>