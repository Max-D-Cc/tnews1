<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_tel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="com.dophin.weichat_article.login.BindTelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:id="@+id/bt_title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="绑定手机号"
            android:textColor="@color/textblack"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_grayno"
        android:layout_marginTop="20dp"
        android:padding="0.7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:background="@drawable/round_white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/bt_tel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:maxLength="11"
                android:textColorHint="#66000000"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="number"
                android:background="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#bbb1b1b1" />
            <EditText
                android:id="@+id/bt_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:textColorHint="#66000000"
                android:gravity="center_vertical"
                android:hint="请输入密码(6 - 15位)"
                android:background="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#bbb1b1b1" />
            <EditText
                android:id="@+id/bt_pwd_again"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:textColorHint="#66000000"
                android:gravity="center_vertical"
                android:hint="请再次输入密码(6 - 15位)"
                android:background="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#bbb1b1b1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/bt_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:textSize="15sp"
                    android:maxLength="6"
                    android:textColorHint="#66000000"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:background="@color/white"
                    />

                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#bbb1b1b1" />


                <TextView
                    android:id="@+id/bt_sendcode"
                    android:textSize="15sp"
                    android:paddingRight="15dp"
                    android:gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/appcolor"
                    android:text="获取验证码"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="完成"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_grayno"
        android:layout_height="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/appcolor"
        android:text="注：微信绑定手机号后可用手机号直接登录,需填写密码"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />


</LinearLayout>
