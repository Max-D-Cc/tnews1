<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_type1_rl"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/item_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="委内瑞拉高调展示购华两栖战车 谢中国不离不弃"
            android:singleLine="true"
            android:textSize="16sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/textblack"
            />

        <LinearLayout
            android:id="@+id/item_ll1"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/item_name1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_type1_img1"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:src="@mipmap/test"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/item_type1_img2"
                android:layout_marginRight="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/test"
                android:scaleType="centerCrop"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/item_type1_img3"
                android:src="@mipmap/test"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:layout_height="80dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_ishot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热点"
            android:visibility="gone"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="0.5dp"
            android:textColor="@color/appcolor"
            android:layout_below="@+id/item_ll1"
            android:textSize="10sp"
            android:background="@drawable/news_bottom_borad_red"
            />

        <TextView
            android:id="@+id/item_type1_tv"
            android:layout_toRightOf="@+id/item_ishot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/textgray"
            android:layout_below="@+id/item_ll1"
            android:textSize="10sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/app_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/item_type2_rl"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/item_type2_img"
            android:layout_marginRight="15dp"
            android:layout_width="100dp"
            android:src="@mipmap/test"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/item_name2"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/item_type2_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:lines="2"
            android:textColor="@color/textblack"
            android:textSize="16sp"
            android:text="委内瑞拉高调 "
            />

        <TextView
            android:id="@+id/item_ishot2"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="热点"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="0.5dp"
            android:textColor="@color/appcolor"
            android:textSize="10sp"
            android:background="@drawable/news_bottom_borad_red"
            />

        <TextView
            android:id="@+id/item_type2_tv"
            android:layout_toRightOf="@+id/item_ishot2"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/textgray"
            android:textSize="10sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/app_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            />
    </RelativeLayout>
</RelativeLayout>
