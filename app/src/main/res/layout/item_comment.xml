<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_comment_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <com.dophin.weichat_article.widget.CircleImageView
            android:id="@+id/item_comment_img"
            android:layout_width="40dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/denglutouxiang"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_height="40dp" />


        <TextView
            android:id="@+id/item_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appcolor"
            android:text="测试名字"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/item_comment_img"
            />


        <TextView
            android:id="@+id/item_comment_content"
            android:layout_below="@+id/item_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textblack"
            android:layout_marginRight="20dp"
            android:text="测试名字"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/item_comment_img"
            />


        <RelativeLayout
            android:id="@+id/item_comment_zan"
            android:layout_width="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
        <TextView

            android:id="@+id/item_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_comment_zan_img"
            android:textColor="@color/textgray"
            android:singleLine="true"
            android:text="0000"
            android:textSize="13sp"
            />

        <ImageView
            android:id="@+id/item_comment_zan_img"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/huifudianzan"
            />
    </RelativeLayout>

        <TextView
            android:id="@+id/item_comment_time"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/item_comment_content"
            android:paddingTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textgray"
            android:textSize="12sp"
            android:paddingBottom="5dp"
            android:text="3-18 15:32:15  15条回复>"
            android:layout_toRightOf="@+id/item_comment_img"
            />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/app_bg"
        />

</LinearLayout>