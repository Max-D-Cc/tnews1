<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_tel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="com.dophin.weichat_article.login.BindTelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:id="@+id/bt_title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="验证手机号"
            android:textColor="@color/textblack"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_grayno"
        android:layout_marginTop="20dp"
        android:padding="0.7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/round_white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ib_tel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:maxLength="11"
                android:textColorHint="#66000000"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="number"
                android:background="@color/white"
                />

           </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/ib_ok"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="检测"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_grayno"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:textColor="@color/appcolor"
        android:text="注：微信绑定手机号后可用手机号直接登录,需填写密码"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />


</LinearLayout>
